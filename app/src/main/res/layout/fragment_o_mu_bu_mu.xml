<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OMuBuMuFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/dark_coffee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txt_Obu_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@+id/btn_back"
            android:layout_toRightOf="@+id/btn_back"
            android:gravity="center"
            android:text="GENEL KÜLTÜR"
            android:textColor="@color/set_sail_sampange"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:id="@+id/textViewOBu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="85dp"
        android:gravity="bottom|center"
        android:text="O MU BU MU?"
        android:textColor="@color/dark_coffee"
        android:textSize="@dimen/bbm_textView_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewİcerik"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textViewİcerik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Bölüm seçiniz."
        android:textColor="@color/tide_water_green"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/buton30"
        app:layout_constraintEnd_toEndOf="@+id/buton30"
        app:layout_constraintStart_toStartOf="@+id/textViewOBu"
        app:layout_constraintTop_toBottomOf="@+id/textViewOBu" />


    <Button
        android:id="@+id/buton30"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/buton_omu_bumu"
        android:text="TARİH"
        android:textColor="@color/tide_water_green"
        android:textSize="@dimen/anasayfa_buton_size"
        app:layout_constraintBottom_toTopOf="@+id/button31"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewİcerik"
       />

    <Button
        android:id="@+id/button31"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/buton_omu_bumu"
        android:text="COĞRAFYA"
        android:textColor="@color/tide_water_green"
        android:textSize="@dimen/anasayfa_buton_size"
        app:layout_constraintBottom_toTopOf="@+id/button32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buton30" />

    <Button
        android:id="@+id/button32"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buton_omu_bumu"
        android:text="GÜNCEL"
        android:layout_marginBottom="20dp"
        android:textColor="@color/tide_water_green"
        android:textSize="@dimen/anasayfa_buton_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button31"
        app:layout_constraintBottom_toTopOf="@+id/button_obu_vat"
        />

    <Button
        android:id="@+id/button_obu_vat"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="165dp"
        android:background="@drawable/buton_omu_bumu"
        android:text="VATANDAŞLIK"
        android:textColor="@color/tide_water_green"
        android:textSize="@dimen/anasayfa_buton_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button32"

        />

</androidx.constraintlayout.widget.ConstraintLayout>