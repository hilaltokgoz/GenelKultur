<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
     <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
    tools:context=".TestFragment2">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/layout12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="65dp"
        android:background="@color/dark_coffee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txt_title10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:minHeight="65dp"
            android:gravity="center"
            android:text="COĞRAFYA"
            android:textColor="@color/set_sail_sampange"
            android:textSize="25sp"
            android:textStyle="bold" />
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tv_cografya_time"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@color/set_sail_sampange"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:padding="10dp"
        android:visibility="gone"
        android:text="Süre:   "
        android:textColor="@color/dark_coffee"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout12">

    </TextView>


         <TextView
             android:id="@+id/tv_cografya_soru1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:includeFontPadding="false"
             android:text=""
             android:textColor="@color/dark_coffee"
             android:layout_marginTop="10dp"
             android:padding="10dp"
             android:textSize="25sp"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/tv_cografya_time"
             app:layout_constraintStart_toStartOf="parent"
             tools:layout_editor_absoluteY="150dp" />

         <RadioGroup
             android:id="@+id/radioButonTest4"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="50dp"
             android:layout_marginRight="10dp"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/tv_cografya_soru1">

             <RadioButton
                 android:id="@+id/rb_co1"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="@dimen/anasayfa_buton_size"
                 android:background="@color/tide_water_green"
                 android:buttonTint="@color/set_sail_sampange"
                 android:includeFontPadding="false"
                 android:text=""
                 android:textColor="@color/set_sail_sampange"
                 android:textSize="20sp"
                  />

             <RadioButton
                 android:id="@+id/rb_co2"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="@dimen/anasayfa_buton_size"
                 android:background="@color/tide_water_green"
                 android:buttonTint="@color/set_sail_sampange"
                 android:includeFontPadding="false"
                 android:text=""
                 android:textColor="@color/set_sail_sampange"
                 android:textSize="20sp"
                 />

             <RadioButton
                 android:id="@+id/rb_co3"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="@dimen/anasayfa_buton_size"
                 android:background="@color/tide_water_green"
                 android:buttonTint="@color/set_sail_sampange"
                 android:includeFontPadding="false"
                 android:text=""
                 android:textColor="@color/set_sail_sampange"
                 android:textSize="20sp"
                  />

             <RadioButton
                 android:id="@+id/rb_co4"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="@dimen/anasayfa_buton_size"
                 android:background="@color/tide_water_green"
                 android:buttonTint="@color/set_sail_sampange"
                 android:includeFontPadding="false"
                 android:text=""
                 android:textColor="@color/set_sail_sampange"
                 android:textSize="20sp"
                  />

             <RadioButton
                 android:id="@+id/rb_co5"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="@dimen/anasayfa_buton_size"
                 android:background="@color/tide_water_green"
                 android:buttonTint="@color/set_sail_sampange"
                 android:includeFontPadding="false"
                 android:text=""
                 android:textColor="@color/set_sail_sampange"
                 android:textSize="20sp"
                 app:layout_constraintBottom_toBottomOf="parent"
                />
         </RadioGroup>

         <ImageView
             android:id="@+id/iv_cog_ref_Test"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:minHeight="75dp"
             android:minWidth="75dp"
             android:layout_marginEnd="50dp"
             android:background="@drawable/radio_button_test"
             android:padding="15dp"
             android:src="@drawable/ic_baseline_refresh_24"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/radioButonTest4" />





</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>