<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestFragmentVat">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="65dp"
        android:background="@color/dark_coffee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txt_title_vatandaslik"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="65dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="VATANDAŞLIK"
            android:textColor="@color/set_sail_sampange"
            android:textSize="25sp"
            android:textStyle="bold" />
    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:id="@+id/tv_vat_time"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:visibility="gone"
        android:background="@color/set_sail_sampange"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:text="Süre:   "
        android:textColor="@color/dark_coffee"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout10">
    </TextView>

    <TextView
        android:id="@+id/textViewTestVat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:includeFontPadding="false"
        android:text=""
        android:textColor="@color/dark_coffee"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_vat_time" />

    <RadioGroup
        android:id="@+id/rg_vatandaslik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTestVat">

        <RadioButton
            android:id="@+id/rbVat_OptionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/anasayfa_buton_size"
            android:background="@color/tide_water_green"
            android:buttonTint="@color/set_sail_sampange"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="@color/set_sail_sampange"
            android:textSize="25sp"
             />

        <RadioButton
            android:id="@+id/rbVat_OptionB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/anasayfa_buton_size"
            android:background="@color/tide_water_green"
            android:buttonTint="@color/set_sail_sampange"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="@color/set_sail_sampange"
            android:textSize="25sp"
             />

        <RadioButton
            android:id="@+id/rbVat_OptionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/anasayfa_buton_size"
            android:background="@color/tide_water_green"
            android:buttonTint="@color/set_sail_sampange"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="@color/set_sail_sampange"
            android:textSize="25sp"
             />

        <RadioButton
            android:id="@+id/rbVat_OptionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/anasayfa_buton_size"
            android:background="@color/tide_water_green"
            android:buttonTint="@color/set_sail_sampange"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="@color/set_sail_sampange"
            android:textSize="25sp"
             />

        <RadioButton
            android:id="@+id/rbVat_OptionE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/anasayfa_buton_size"
            android:background="@color/tide_water_green"
            android:buttonTint="@color/set_sail_sampange"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="@color/set_sail_sampange"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
             />
    </RadioGroup>

    <ImageView
        android:id="@+id/iv_vat_refrest_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:background="@drawable/radio_button_test"
        android:minWidth="75dp"
        android:minHeight="75dp"
        android:padding="15dp"
        android:src="@drawable/ic_baseline_refresh_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg_vatandaslik" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>